{# Filename: _includes/base.njk #}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }}</title> {# The title will come from our content file #}

    {# Linking to Google Fonts to match your Wordpress site's style #}
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@400;700&family=Playfair+Display:wght@700&display=swap" rel="stylesheet">

    {# Linking to our CSS file #}
    <link rel="stylesheet" href="{{ '/css/style.css' | url }}">
    {% block head %}{% endblock %}
</head>
<body>
    <div class="wrapper">
        <header class="site-header">
            <h1>Sasi Mitra</h1>
            <p class="tagline">Astrophysics | Code | Art</p>
        </header>

        <nav class="main-nav">
            <ul>
                <li><a href="{{ '/' | url }}">Home</a></li>
                <li><a href="{{ '/research/' | url }}">Research</a></li>
                <li><a href="{{ '/blog/' | url }}">Blog</a></li>
                
                <li class="dropdown"> <a href="#" class="drop-btn">Funky Web Apps â–¼</a>
                    <ul class="dropdown-content"> <li><a href="{{ '/apps/bibtex-merger/' | url }}">BibTeX Merge Machine</a></li>
                    </ul>
                </li>
                <li><a href="{{ '/cv/' | url }}">CV</a></li>
                <li><a href="{{ '/contact/' | url }}">Contact</a></li>
            </ul>
        </nav>

        <main>
            {# This is where the content from files will be injected! #}
            {% block content %}
            {{ content | safe }}
            {% endblock %}
        </main>

        <footer class="site-footer">
            <p>&copy; <span id="year"></span> Sasi Mitra.</p>
        </footer>
    </div>

    {# A tiny script to automatically update the year in the footer #}
    <script>
        document.getElementById('year').textContent = new Date().getFullYear();
    </script>
    {% block scripts %}{% endblock %}
</body>
</html>